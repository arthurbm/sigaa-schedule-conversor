{
  "manifest_version": 3,
  "name": "Conversor de Horários SIGAA",
  "description": "Converte os horários do SIGAA para um formato mais legível. Baseado no trabalho de Luthiery Costa.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.sigaa.*/sigaa/*"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
